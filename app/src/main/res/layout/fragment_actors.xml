<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_view_cast"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvActor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCast"
        app:layout_constraintLeft_toRightOf="@+id/ivActor1"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivActor1"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.514" />

    <TextView
        android:id="@+id/tvActor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/ivActor2"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/ivActor2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivActor2"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvActor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/ivActor3"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivActor3"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivActor3"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/ivActor1"
        android:layout_width="@dimen/activity_movie_image"
        android:layout_height="@dimen/activity_movie_image"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCast" />

    <ImageView
        android:id="@+id/ivActor2"
        android:layout_width="@dimen/activity_movie_image"
        android:layout_height="@dimen/activity_movie_image"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivActor1"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ivActor3"
        android:layout_width="@dimen/activity_movie_image"
        android:layout_height="@dimen/activity_movie_image"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivActor2"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>